{
  "compilerOptions": {
    "target": "ES2022",                     // moderne Spracheigenschaften
    "module": "ES2022",                     // Native ES Module
    "moduleResolution": "node",            // f체r npm-Pakete
    "lib": ["ES2022", "DOM"],              // DOM f체r EventListener
    "esModuleInterop": true,               // `import x from 'x'`-Kompatibilit채t
    "forceConsistentCasingInFileNames": true,
    "strict": true,                        // optional, aber empfohlen
    "skipLibCheck": true,                  // vermeidet Probleme mit d.ts-Dateien
    "outDir": "dist",                      // fertige JS-Dateien kommen hierhin
    "rootDir": "src",                      // Quellcodeverzeichnis
    "resolveJsonModule": true,             // falls du JSON importieren willst
    "allowSyntheticDefaultImports": true,  // f체r z.B. `import express from 'express'`
    "allowJs": false ,                      // wir schreiben nur TS
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
